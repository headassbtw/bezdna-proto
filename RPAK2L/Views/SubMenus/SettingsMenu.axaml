<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        d:DesignWidth="700" d:DesignHeight="550"
        MinWidth="700"
        Height="550"
        Width="700"
        WindowStartupLocation="CenterOwner"
        xmlns:subMenuViewModels="clr-namespace:RPAK2L.ViewModels.SubMenuViewModels"
        x:Class="RPAK2L.Views.SubMenus.SettingsMenu"
        Title="Settings">
    <Design.DataContext>
        <subMenuViewModels:SettingsMenuViewModel/>
    </Design.DataContext>
    <Grid ColumnDefinitions="*" RowDefinitions="*,Auto">
        <ScrollViewer Grid.Column="0" HorizontalAlignment="Stretch" Grid.Row="0">
            <ListBox HorizontalAlignment="Stretch" Items="{Binding SettingsItems}"></ListBox>
            <!-- settings will go here, gonna find a way to make it populate through code instead of manually binding them, it's a pain -->
        </ScrollViewer>
        <Grid Grid.Row="1" ColumnDefinitions="*,Auto">
            <TextBlock></TextBlock>
            <Button Grid.Column="1">Apply</Button>
        </Grid>
    </Grid>
</Window>
