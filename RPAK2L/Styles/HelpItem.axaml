<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:RPAK2L.Styles">
    <Design.PreviewWith>
        <controls:HelpItem />
    </Design.PreviewWith>

    <Style Selector="controls|HelpItem">
        <Setter Property="Template">
            <ControlTemplate>
                <Grid Grid.Row="0">
                    <Border Background="#55999999" BorderBrush="white" BorderThickness="1"/>
                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center" Text="{TemplateBinding Help_Text}"/>
                </Grid>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
