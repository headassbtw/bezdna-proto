<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:helpDialog="clr-namespace:RPAK2L.Dialogs.HelpDialog"
        xmlns:avalonia="clr-namespace:Markdown.Avalonia;assembly=Markdown.Avalonia"
        x:Class="RPAK2L.Dialogs.HelpDialog.HelpWindow"
        WindowStartupLocation="CenterOwner"
        Title="Help">
    <Design.DataContext>
        <helpDialog:HelpContext/>
    </Design.DataContext>
    <Panel>
        <TabControl TabStripPlacement="Left" Margin="0 0 0 0">
            <TabItem Classes="helptab" Header="Quick Start">
                <avalonia:MarkdownScrollViewer
                    Source="avares://RPAK2L/Resources/HelpMenu/QuickStart/Start.md"/>
            </TabItem>
            <TabItem Classes="helptab" Header="Configuring">
                <avalonia:MarkdownScrollViewer
                    Source="avares://RPAK2L/Resources/HelpMenu/Configuration/Config.md"/>
            </TabItem>
        </TabControl>
    </Panel>
</Window>
